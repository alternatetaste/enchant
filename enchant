import sys

# Define the mapping
CHAR_MAP = {
    "A": "·îë",
    "B": " ñ",
    "C": "·ìµ",
    "D": "‚Ü∏",
    "E": "·í∑",
    "F": "‚éì",
    "G": "‚ä£",
    "H": "‚çë",
    "I": "‚ïé",
    "J": "‚ãÆ",
    "K": "Íñå",
    "L": "Íñé",
    "M": "·í≤",
    "N": "„É™",
    "O": "ùôπ",
    "P": "!¬°",
    "Q": "·ëë",
    "R": "‚à∑",
    "S": "·ì≠",
    "T": "‚Ñ∏",
    "U": "‚öç",
    "V": "‚çä",
    "W": "‚à¥",
    "X": "Ãá/",
    "Y": "||",
    "Z": "‚®Ö",
}


def enchantEncode(word): 
    word_list = list(word)
    enchantedText = ""
    for letter in word_list: 
        enchantedText += CHAR_MAP.get(letter)
    
    return ''.join(enchantedText)




wordList = sys.argv
total_word = ""

for word in wordList[1:]:
    word = word.upper()
    new_text = enchantEncode(word)
    total_word += new_text + " "

print(total_word)
